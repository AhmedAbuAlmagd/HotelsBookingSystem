@model HotelsBookingSystem.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Login Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Login.css">
</head>

<body>
    <div class="background-wrapper">
        <div class="login-container">
            <form asp-action="Login" class="login-form">
                <h2>Login</h2>
                <label for="Email">Username</label>
                <input type="text" asp-for="UserName" placeholder="Enter your UserName" >
                <span asp-validation-for="UserName" class="text-danger text-start"></span>

                <label for="password">Password</label>
                <input type="password" asp-for="Password" placeholder="Enter your password" >
                <span asp-validation-for="Password" class="text-danger"></span>

                <div class="remember-me">
                    <input type="checkbox" asp-for="RememberMe">
                    <label for="remember" style="margin-top:7px">Remember Me</label>
                    <span asp-validation-for="RememberMe" class="text-danger text-start"></span>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

                <button type="submit">Login</button>
                <div class="register-link">
                    <p>Don't have an account? <a asp-action="Register">Register</a></p>
                </div>
            </form>
        </div>
    </div>
</body>

</html>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
