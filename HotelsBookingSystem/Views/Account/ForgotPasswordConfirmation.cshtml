@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Password Reset Sent</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
        }

        .confirmation-container {
            max-width: 500px;
            width: 100%;
            padding: 2.5rem;
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .confirmation-icon {
            font-size: 3.5rem;
            color: #4a90e2;
            margin-bottom: 1.5rem;
        }

        .confirmation-header {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }

        .confirmation-message {
            color: #6c757d;
            font-size: 1.1rem;
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .btn-primary {
            padding: 12px 24px;
            border-radius: 5px;
            border: none;
            font-weight: 500;
            letter-spacing: 0.5px;
            transition: all 0.3s;
        }

            .btn-primary:hover {
                transform: translateY(-1px);
            }

        .additional-help {
            margin-top: 1.5rem;
            color: #6c757d;
            font-size: 0.9rem;
        }
    </style>
</head>

<body>
    <div class="confirmation-container">
        <div class="confirmation-icon">
            <i class="fas fa-envelope"></i>
        </div>
        <h2 class="confirmation-header">Password Reset Sent</h2>
        <p class="confirmation-message">
            We've sent an email with password reset instructions to your email address.
            Please check your inbox, including the spam folder if you don't see it.
        </p>
        <a asp-action="Login" class="btn btn-primary">
            <i class="fas fa-arrow-left me-2"></i>Return to Login
        </a>
        <p class="additional-help mt-3">
            Didn't receive the email? <a href="#" style="color: #4a90e2;">Resend link</a>
        </p>
    </div>
</body>

</html>