@model HotelsBookingSystem.ViewModels.AccountViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Reset Password</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>

        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
        }

        .reset-password-container {
            max-width: 500px;
            width: 100%;
            padding: 2.5rem;
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .reset-password-header {
            color: var(--text-color);
            font-weight: 600;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 500;
            color: var(--text-color);
            margin-bottom: 0.5rem;
        }

        .form-control {
            height: 45px;
            border-radius: 5px;
            border: 1px solid #ddd;
            padding: 10px 15px;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(74, 144, 226, 0.25);
            }

        .btn-primary {
            width: 100%;
            padding: 12px;
            border-radius: 5px;
            border: none;
            font-weight: 500;
            letter-spacing: 0.5px;
            transition: all 0.3s;
        }

            .btn-primary:hover {
                transform: translateY(-1px);
            }

        .text-danger {
            color: var(--danger-color);
            font-size: 0.9rem;
            margin-top: 0.25rem;
        }

        .alert-danger {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: var(--danger-color);
            border-radius: 5px;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

        .password-strength {
            margin-top: 0.5rem;
            font-size: 0.85rem;
            color: var(--secondary-text);
        }

        .password-toggle {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: var(--secondary-text);
        }

        .input-group {
            position: relative;
        }
    </style>
</head>

<body>
    <div class="reset-password-container">
        <h2 class="reset-password-header">
            <i class="fas fa-key me-2"></i>Reset Your Password
        </h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <h5 class="alert-heading">Please fix the following errors:</h5>
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div class="form-group">
                <label asp-for="Password" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="Password" class="form-control" id="password" />
                    <span class="password-toggle" id="togglePassword">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="password-strength" id="passwordStrength"></div>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" />
                    <span class="password-toggle" id="toggleConfirmPassword">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-sync-alt me-2"></i>Reset Password
            </button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            // Toggle password visibility
            $('#togglePassword').click(function() {
                const password = $('#password');
                const icon = $(this).find('i');
                if (password.attr('type') === 'password') {
                    password.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    password.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Toggle confirm password visibility
            $('#toggleConfirmPassword').click(function() {
                const confirmPassword = $('#confirmPassword');
                const icon = $(this).find('i');
                if (confirmPassword.attr('type') === 'password') {
                    confirmPassword.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    confirmPassword.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Password strength indicator
            $('#password').on('input', function() {
                const password = $(this).val();
                const strengthText = $('#passwordStrength');

                if (password.length === 0) {
                    strengthText.text('');
                    return;
                }

                // Very simple strength check - you can enhance this
                if (password.length < 6) {
                    strengthText.text('Weak').css('color', 'red');
                } else if (password.length < 10) {
                    strengthText.text('Medium').css('color', 'orange');
                } else {
                    strengthText.text('Strong').css('color', 'green');
                }
            });
        });
    </script>
</body>

</html>